{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-2",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "my-nextjs",
          "name": "My Nextjs",
          "type": "fargate",
          "buildType": "nixpacks",
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "www.example.com",
          "enableCloudfrontSwr": true,
          "minInstances": 1,
          "maxInstances": 1,
          "buildCommand": "npm run build",
          "startCommand": "npm run start",
          "envVariables": {
            "SOMETHING_STATIC": "hello-world"
          },
          "healthCheckPath": "/health"
        }
      ]
    }
  ]
}
